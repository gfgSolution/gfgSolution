C++ solution

class Solution {
  public:

    // Function to rotate an array by d elements in counter-clockwise direction.
    void rotateArr(vector<int>& arr, int d) {
        // code here
         d%=arr.size() ;
            for(int i = 0 ; i < d ;i++ )
             arr.push_back(arr[i]) ;
            arr.erase(arr.begin(),arr.begin()+d) ;
   
    }
};
